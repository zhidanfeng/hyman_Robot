<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <!-- 线的宽度，颜色灰色 -->
    <stroke
        android:width="1dp"
        android:color="#DEE1E0" >
    </stroke>
    
    <!-- 矩形的圆角半径 -->
    <corners android:radius="10dp" />

    <gradient
        android:angle="270"
        android:endColor="#FFFEFF"
        android:startColor="#F4F5F5" />
    
    <padding 
        android:top="5dp"
        android:bottom="5dp"/>

</shape>